<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UI.SelectedBooking.CheckOutExtendScreen"
    >


    <android.support.v4.widget.NestedScrollView
        android:background="#FFFFFFFF"
        android:layout_width="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/check_out_extend_hotel"
                android:src="@drawable/app_logo"/>

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/verylargeFont"
                android:textColor="@color/text_black"
                android:id="@+id/hotel_name_check_out_extend"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Zingo Hotels Pvt Ltd"

                />


            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/verylargeFont"
                android:textColor="@color/text_black"
                android:id="@+id/choose_check_out"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="@string/check_out_choose"

                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/red_combo"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/circle_outline"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:textSize="@dimen/regularFont"
                            android:textColor="@android:color/white"
                            android:id="@+id/check_out_twopm_time"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="2 PM"
                            />

                    </FrameLayout>

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@android:color/white"
                        android:id="@+id/check_out_twopm"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="for ₹ 100"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/red_combo"
                    android:layout_weight="1">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle_outline"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:textSize="@dimen/regularFont"
                            android:textColor="@android:color/white"
                            android:id="@+id/check_out_fourpm_time"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="4 PM"
                            />

                    </FrameLayout>



                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@android:color/white"
                        android:id="@+id/check_out_fourpm"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="for ₹ 200"
                        />




                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:background="@drawable/red_combo"
                    android:layout_weight="1">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:layout_margin="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/circle_outline"/>

                        <android.support.v7.widget.AppCompatTextView
                            android:textSize="@dimen/regularFont"
                            android:textColor="@android:color/white"
                            android:id="@+id/check_out_sixpm_time"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:layout_height="wrap_content"
                            android:text="6 PM"
                            />

                    </FrameLayout>



                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@android:color/white"
                        android:id="@+id/check_out_later_sixpm"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="for ₹ 300"
                        />


                </LinearLayout>

            </LinearLayout>

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="@string/check_out_come_back"
                />

            <android.support.v7.widget.AppCompatButton
                android:textSize="@dimen/largeFont"
                android:textColor="@android:color/white"
                android:id="@+id/cancel_screen"
                android:background="@drawable/selector_button_app"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="Close"
                android:textAllCaps="false"

                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>