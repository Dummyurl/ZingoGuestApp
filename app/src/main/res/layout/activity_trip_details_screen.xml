<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UI.BookingDetails.TripDetailsScreen"
    >


    <android.support.v4.widget.NestedScrollView
        android:background="#FFFFFFFF"
        android:layout_width="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:id="@+id/check_out_extend_hotel"
                android:src="@drawable/app_logo"/>

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/verylargeFont"
                android:textColor="@color/text_black"
                android:id="@+id/hotel_name_trip_details"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Zingo Hotels Pvt Ltd"

                />


            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/regularFont"
                android:textColor="@color/grey_charcoal"
                android:id="@+id/booking_number_trip_details"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Number #2310"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/trip_details"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="@string/trip_details_text"

                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/check_in_date_trip"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:text="Check-In Date"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/check_in_date"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:text="23 Sep,2018"

                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/check_out_date_trip"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:text="Check out Date"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/check_out"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:padding="5dp"
                        android:layout_height="wrap_content"
                        android:text="25 Sep,2018"

                        />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#98000000" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/regularFont"
                android:textColor="@color/grey_charcoal"
                android:id="@+id/room_type_text"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Type"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/room_type"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="Deluxe AC"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/payment_summarytext"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Payment Summary"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/room_charge_text"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Room Charge"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/room_charge"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(1 room(s) Ã— 2 night(s)"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/room_charge_value"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 4,000.00"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/room_charge_value_text"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(â‚¹ 2,000/per night)"

                        />



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/gst_value_text"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="GST"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/gst_value"
                        android:layout_marginRight="5dp"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(12% )"

                        />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/gst_amount"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 480.00"

                        />

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/regularFont"
                        android:textColor="@color/grey_charcoal"
                        android:id="@+id/gst_amount_text"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="(â‚¹ 240 Ã— 1 Ã— 2)"

                        />



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/other_charge_text"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Other Charges"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/other_charge"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 200.00"

                        />

                </LinearLayout>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/total_charge_text"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Total"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/total_charge"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:text="â‚¹ 4,680.00"

                        />

                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:textSize="@dimen/largeFont"
                android:textColor="@android:color/white"
                android:id="@+id/cancel_screen"
                android:background="@drawable/selector_button_app"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="Close"
                android:textAllCaps="false"

                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>