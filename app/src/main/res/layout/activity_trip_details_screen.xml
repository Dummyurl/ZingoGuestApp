<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/rootView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".UI.BookingDetails.TripDetailsScreen"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <ImageView
                android:id="@+id/back"
                android:layout_width="50dp"
                android:layout_height="25dp"
                android:layout_margin="5dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/back_arrow"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Details"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/largeFont"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>



        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    app:cardElevation="3dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/billing_hotel_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif-condensed"
                                android:text=""
                                android:textColor="#000"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/billing_hotel_name"
                                android:layout_margin="10dp"
                                android:id="@+id/bill_hotel_place"
                                android:fontFamily="sans-serif-condensed"
                                android:text=""
                                android:textColor="#8c8c8c"
                                android:textSize="15sp" />
                            <ImageView
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_margin="10dp"
                                android:layout_gravity="center"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:id="@+id/check_out_extend_hotel"
                                android:src="@drawable/app_logo"/>

                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#acacac" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="150dp"
                                android:orientation="vertical"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="10dp"

                                    android:gravity="center_vertical"
                                    android:layout_alignParentTop="true"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="14sp"
                                        android:id="@+id/booking_num"
                                        android:layout_weight="1"
                                        android:layout_marginLeft="5dp"
                                        android:text=""
                                        android:textColor="#000"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:gravity="right"
                                        android:layout_marginRight="10dp"
                                        android:layout_weight="2"
                                        android:text=""
                                        android:textColor="#000"
                                        android:id="@+id/brief_detail_room_number"

                                        />
                                </LinearLayout>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="30sp"
                                    android:textColor="#000"
                                    android:gravity="center"
                                    android:layout_centerInParent="true"
                                    android:text=""
                                    android:id="@+id/brief_detail_traveller_name"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="14sp"
                                    android:layout_alignParentBottom="true"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:text=""
                                    android:layout_marginBottom="10dp"
                                    android:id="@+id/brief_detail_pax_details"
                                    />

                                <TextView
                                    android:id="@+id/balance_amount_info"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_marginTop="361dp"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical|right"
                                    android:text="Rs. 1400"
                                    android:textSize="14sp" />


                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:textSize="@dimen/regularFont"
                                        android:textColor="@color/grey_charcoal"
                                        android:id="@+id/check_in_date_trip"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="wrap_content"
                                        android:text="Check-In Date"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:textSize="@dimen/largeFont"
                                        android:textColor="#3498DB"
                                        android:id="@+id/check_in_date"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="wrap_content"
                                        android:text="23 Sep,2018"

                                        />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:orientation="vertical"
                                    android:layout_weight="1">

                                    <android.support.v7.widget.AppCompatTextView
                                        android:textSize="@dimen/regularFont"
                                        android:textColor="@color/grey_charcoal"
                                        android:id="@+id/check_out_date_trip"
                                        android:gravity="center"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginRight="5dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="wrap_content"
                                        android:text="Check out Date"

                                        />

                                    <android.support.v7.widget.AppCompatTextView
                                        android:textSize="@dimen/largeFont"
                                        android:textColor="#3498DB"
                                        android:id="@+id/check_out"
                                        android:gravity="center"
                                        android:layout_width="match_parent"
                                        android:padding="5dp"
                                        android:layout_height="wrap_content"
                                        android:text="25 Sep,2018"

                                        />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:layout_weight="1">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:textColor="#3498DB"
                                        android:text=""
                                        android:id="@+id/brief_detail_check_in_time"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:text="Check-In Time"
                                        android:textColor="#000"
                                        android:layout_marginTop="10dp"
                                        />

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="10dp"
                                    android:layout_weight="1"
                                    >
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="16sp"
                                        android:gravity="right"
                                        android:text=""
                                        android:textColor="#3498DB"
                                        android:id="@+id/brief_detail_check_out_time"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="10sp"
                                        android:text="Check-Out Time"
                                        android:gravity="right"
                                        android:textColor="#000"
                                        android:layout_marginTop="10dp"
                                        />

                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text=" Duration of Stay"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:gravity="center"
                                    android:text=""
                                    android:textColor="#27AE60"
                                    android:id="@+id/brief_detail_duration_of_stay"
                                    />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="10dp"
                                android:layout_gravity="center">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:text="Duration Left"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:layout_marginTop="10dp"
                                    />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="24sp"
                                    android:gravity="center"
                                    android:textColor="#FF0000"
                                    android:text=""
                                    android:id="@+id/brief_detail_duration_left"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:padding="10dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"

                                        android:textSize="14sp"
                                        android:text="Total Amount"
                                        android:layout_weight="1"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"

                                        android:textSize="14sp"
                                        android:id="@+id/total_amount_info"
                                        android:text=""
                                        android:layout_weight="1"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:padding="10dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"

                                        android:textSize="14sp"
                                        android:text="Total Paid"
                                        android:layout_weight="1"
                                        />
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"

                                        android:textSize="14sp"
                                        android:id="@+id/paid_amount_info"
                                        android:text=""
                                        android:layout_weight="1"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal"
                                    android:padding="10dp">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical"

                                        android:textSize="14sp"
                                        android:text="Total Balance"
                                        android:layout_weight="1"
                                        />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center_vertical|right"

                                        android:textSize="14sp"

                                        android:text=""
                                        android:id="@+id/details_room_balance"
                                        android:layout_weight="1"
                                        />

                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:textColor="#FF0000"
                                    android:text="View Payment Breakup"
                                    android:id="@+id/view_break_up"
                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:id="@+id/payment_break_up"
                                android:layout_marginTop="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/room_charge_text"
                                            android:layout_width="match_parent"

                                            android:layout_marginLeft="15dp"
                                            android:layout_height="wrap_content"
                                            android:text="Room Charge"

                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/regularFont"
                                            android:textColor="@color/grey_charcoal"
                                            android:id="@+id/room_charge"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            />



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/room_charge_value"
                                            android:layout_width="match_parent"
                                            android:gravity="right"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="15dp"
                                            android:layout_height="wrap_content"

                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/regularFont"
                                            android:textColor="@color/grey_charcoal"
                                            android:id="@+id/room_charge_value_text"
                                            android:gravity="right"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            />



                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/gst_value_text"
                                            android:layout_width="match_parent"

                                            android:layout_marginLeft="15dp"
                                            android:layout_height="wrap_content"
                                            android:text="GST"

                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/regularFont"
                                            android:textColor="@color/grey_charcoal"
                                            android:id="@+id/gst_value"
                                            android:layout_marginRight="5dp"
                                            android:layout_marginLeft="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            />



                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/gst_amount"
                                            android:layout_width="match_parent"
                                            android:gravity="right"
                                            android:layout_marginRight="15dp"
                                            android:layout_height="wrap_content"

                                            />

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/regularFont"
                                            android:textColor="@color/grey_charcoal"
                                            android:id="@+id/gst_amount_text"
                                            android:gravity="right"
                                            android:layout_gravity="right"
                                            android:layout_marginRight="15dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"

                                            />



                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/other_charge_text"
                                            android:layout_width="match_parent"

                                            android:layout_marginLeft="15dp"
                                            android:layout_height="wrap_content"
                                            android:text="Other Charges"

                                            />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingBottom="10dp"
                                        android:orientation="vertical"
                                        android:layout_weight="1">

                                        <android.support.v7.widget.AppCompatTextView
                                            android:textSize="@dimen/largeFont"
                                            android:textColor="@color/text_black"
                                            android:id="@+id/other_charge"
                                            android:layout_width="match_parent"
                                            android:gravity="right"
                                            android:layout_marginRight="15dp"
                                            android:layout_height="wrap_content"

                                            />

                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#262626"
                                        android:textSize="18sp"
                                        android:paddingLeft="20dp"
                                        android:background="#cfcbcb"
                                        android:layout_marginBottom="10dp"
                                        android:text="Payment Details"/>

                                    <android.support.v7.widget.RecyclerView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/detailed_payments_lists"
                                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                        android:scrollbars="none"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="No Data Found"
                                        android:id="@+id/no_payment_data"
                                        android:textSize="18sp"
                                        android:gravity="center"/>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0.5dp"
                                    android:background="#b1b0b0"/>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textColor="#262626"
                                        android:textSize="18sp"
                                        android:paddingLeft="20dp"
                                        android:background="#cfcbcb"
                                        android:layout_marginBottom="10dp"
                                        android:text="Service Details"/>
                                    <android.support.v7.widget.RecyclerView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/detailed_services_lists"
                                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                                        android:scrollbars="none"/>
                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="No Data Found"
                                        android:id="@+id/no_service_data"
                                        android:textSize="18sp"
                                        android:gravity="center"/>

                                </LinearLayout>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.AppCompatButton
            android:textSize="@dimen/largeFont"
            android:textColor="@android:color/white"
            android:id="@+id/submit_bill"
            android:background="@drawable/selector_button_app"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginTop="10.0dip"
            android:layout_marginBottom="10.0dip"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:text="Request to Check-Out"
            android:textAllCaps="false"

            />

        <android.support.v7.widget.AppCompatButton
            android:textSize="@dimen/largeFont"
            android:textColor="@android:color/white"
            android:id="@+id/send_invoice"
            android:background="@drawable/selector_button_app"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/activity_large_margin"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="@dimen/activity_large_margin"
            android:text="Send Invoice"
            android:textAllCaps="false"

            />

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:background="#FFFFFFFF"
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_marginBottom="15dp"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:orientation="vertical">





            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/verylargeFont"
                android:textColor="@color/text_black"
                android:id="@+id/hotel_name_trip_details"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="Zingo Hotels Pvt Ltd"

                />


            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/regularFont"
                android:textColor="@color/grey_charcoal"
                android:id="@+id/booking_number_trip_details"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Booking Number #2310"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/trip_details"
                android:gravity="center"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:text="@string/trip_details_text"

                />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#98000000" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/regularFont"
                android:textColor="@color/grey_charcoal"
                android:id="@+id/room_type_text"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Room Type"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/room_type"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:text="Deluxe AC"

                />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/largeFont"
                android:textColor="@color/text_black"
                android:id="@+id/payment_summarytext"
                android:layout_width="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="Payment Summary"

                />




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#dadada" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/total_charge_text"
                        android:layout_width="match_parent"

                        android:layout_marginLeft="15dp"
                        android:layout_height="wrap_content"
                        android:text="Total"

                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <android.support.v7.widget.AppCompatTextView
                        android:textSize="@dimen/largeFont"
                        android:textColor="@color/text_black"
                        android:id="@+id/total_charge"
                        android:layout_width="match_parent"
                        android:gravity="right"
                        android:layout_marginRight="15dp"
                        android:layout_height="wrap_content"
                        android:text=""

                        />

                </LinearLayout>


            </LinearLayout>


            <android.support.v7.widget.AppCompatButton
                android:textSize="@dimen/largeFont"
                android:textColor="@android:color/white"
                android:id="@+id/cancel_screen"
                android:background="@drawable/selector_button_app"
                android:layout_width="100dp"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_height="40dp"
                android:layout_marginLeft="@dimen/activity_large_margin"
                android:layout_marginTop="10.0dip"
                android:layout_marginRight="@dimen/activity_large_margin"
                android:text="Close"
                android:textAllCaps="false"

                />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

