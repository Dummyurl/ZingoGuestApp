<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="5dp"
        android:id="@+id/room_layout"
        android:orientation="vertical"

        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/no_room"
            android:id="@+id/pre_booking_selected_room"
            android:layout_gravity="center"/>
        <com.example.zingohotelscom.zingoguestmainapp.CustomViews.CustomFontTextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#000"
            android:id="@+id/pre_booking_selected_room_number"
            android:layout_gravity="center"
            android:textSize="14sp"
            android:fontFamily="@string/arial"/>

    </LinearLayout>
</LinearLayout>