<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <FrameLayout
            android:layout_width="match_parent"
            android:id="@+id/frame"
            android:layout_height="200dp">



            <ImageView
                android:id="@+id/header_cover_image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner" />

            <View
                android:background="@color/transparentBlack"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/back_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/back_arrow" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_profile_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:elevation="50dp"
                android:padding="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profle_image" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/frame"
            android:elevation="4dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="16dp"
                android:id="@+id/edit_profile">
                <ImageView
                    android:id="@+id/drop_down_option_menu"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                     />
                <TextView
                    android:id="@+id/drop_down_option_menu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary"
                    />
            </LinearLayout>




        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"

                android:elevation="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="2"
                    android:background="#fff"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="Name :" />

                <TextView
                    android:id="@+id/user_profile_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:clickable="true"
                    android:textColor="@color/text_black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"

                android:elevation="4dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="2"
                    android:background="#fff"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="Email :" />

                <TextView
                    android:id="@+id/email_id"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:background="#fff"
                    android:textColor="@color/text_black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profile_layout"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="2"
                    android:background="#fff"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="Phone :" />
                <TextView
                    android:id="@+id/phone_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:background="#fff"
                    android:textColor="@color/text_black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="2"
                    android:background="#fff"
                    android:clickable="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="Address :" />
                <TextView
                    android:id="@+id/address"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:textColor="@color/text_black"
                    android:textSize="18dp"
                    android:paddingLeft="20dp"
                    android:text="" />
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Change Password"
                android:layout_margin="5dp"
                android:elevation="1dp"
                android:visibility="gone"
                android:id="@+id/change_password"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:paddingRight="20dp"
                android:background="#fff"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Logout"
                android:layout_margin="5dp"
                android:elevation="1dp"
                android:id="@+id/log_out"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:textColor="#000"
                android:paddingRight="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/logout"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/revenue_layout"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    app:cardElevation="5dp"
                    card_view:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <app.zingo.zingoguest.CustomViews.CustomFontTextView
                                android:id="@+id/total_confirm_booking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                app:fontName="arial"
                                android:text="0"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingLeft="15dp"
                                android:textColor="#720D5D"
                                />


                        </LinearLayout>

                        <app.zingo.zingoguest.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            app:fontName="arial"
                            android:gravity="center_horizontal"
                            android:text="Completed Bookings"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textColor="#000"
                            />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="5dp"
                    card_view:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <app.zingo.zingoguest.CustomViews.CustomFontTextView
                                android:id="@+id/total_cancel_booking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                app:fontName="arial"
                                android:text="0"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingLeft="15dp"
                                android:textColor="#D500F9"
                                />


                        </LinearLayout>

                        <app.zingo.zingoguest.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            app:fontName="arial"
                            android:gravity="center_horizontal"
                            android:text="Cancelled Bookings"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textColor="#000"
                            />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"

                android:layout_marginTop="10dp"
                android:layout_below="@+id/revenue_layout"
                android:orientation="horizontal">



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="5dp"
                    card_view:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <app.zingo.zingoguest.CustomViews.CustomFontTextView
                                android:id="@+id/total_upcoming_booking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                app:fontName="arial"
                                android:text="0"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingLeft="15dp"
                                android:textColor="#D500F9"
                                />


                        </LinearLayout>

                        <app.zingo.zingoguest.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            app:fontName="arial"
                            android:gravity="center_horizontal"
                            android:text="Upcoming Bookings"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textColor="#000"
                            />


                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="5dp"
                    app:cardElevation="5dp"
                    card_view:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_weight="2"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">
                            <app.zingo.zingoguest.CustomViews.CustomFontTextView
                                android:id="@+id/total_bookings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="25sp"
                                app:fontName="arial"
                                android:text="0"
                                android:gravity="center"
                                android:paddingTop="5dp"
                                android:paddingLeft="15dp"
                                android:textColor="#D500F9"
                                />


                        </LinearLayout>

                        <app.zingo.zingoguest.CustomViews.CustomFontTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:layout_weight="1"
                            app:fontName="arial"
                            android:gravity="center_horizontal"
                            android:text="Total Bookings"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp"
                            android:textColor="#000"
                            />


                    </LinearLayout>

                </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>

